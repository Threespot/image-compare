    "build": "npm run clean && npm run copy && npm run minify"
  },
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "cpy-cli": "^3.1.1",
    "del-cli": "^4.0.0",
    "minify": "^7.0.2"
  }
}
